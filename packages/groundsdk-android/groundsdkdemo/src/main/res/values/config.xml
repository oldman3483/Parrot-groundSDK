<resources xmlns:tools="http://schemas.android.com/tools" tools:keep="@raw/gsdk_app_defaults">

    <!-- Tells if connection using "Usb Debug Bridge" is enable -->
    <bool name="gsdk_usb_debug_enabled">true</bool>

    <!-- Tells if connection using ble is enable (Ble support is deprecated) -->
    <bool name="gsdk_ble_enabled">true</bool>

    <!-- Tells if the dev tool box is enabled -->
    <bool name="gsdk_dev_toolbox_enabled">true</bool>

    <!-- Maximum size for the in-memory cache gsdk maintains for media thumbnails, in bytes. -->
    <integer name="gsdk_media_thumbnail_cache_size">4194304</integer>

</resources>